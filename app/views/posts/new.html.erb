<p> <%= link_to MetaForum.first.name, root_url %> > 
     <%= link_to @parent.name, super_forum_url(@parent) %> > 
     <%= link_to @sub_forum.name, sub_forum_url(@sub_forum) %>  <p>

<div id="new-post-title">
<h4> Create a New Post </h4>
</div>

<div id="new-post-form">
  <form action="/posts" class="new_post" id="new_post" method="post">
    Title: <br> <input id="post_title" name="post[title]" size="30" type="text"><br>
    Content: <br><textarea id="post_content" name="post[content]"></textarea><br>
    <input type="hidden" name="sub_forum_id" value="4">
    <br>
    <input name="commit" type="submit" value="Create Post">
  </form>
</div>

