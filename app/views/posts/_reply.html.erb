<div class='reply-container'>
  <div class='reply-content'><%= reply.content %> </div>
  <div class='reply-profile'><%= link_to reply.user.username, user_url(reply.user) %>
  </div>
  <div class='reply-button-div'>
    <% if user_signed_in? %>
    <button class="reply-button">Reply to Post</button>
    <% end %>
  </div>

  <form class='reply-post-form' data-id = "reply_id <%= @post.id %>" >
    <label for="reply_content">Message</label><br>
    <textarea cols='60' class="reply-content" name='reply[content]' rows="20"></textarea><br>
    <input type="submit" class="submit-button" value="Submit" />
  </form>

</div>