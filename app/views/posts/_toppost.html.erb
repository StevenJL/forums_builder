<div id='post-container'>
  <div id='post-content'>
    <%= @post.title %>
    <%= link_to @post.user.username, user_url(@post.user)%>
    <%= @post.content %>
  </div>

  <div class='reply-button-div'>
    <% if user_signed_in? %>
    <button class="reply-button">Reply to Post</button>
    <% else %>
    <%= link_to "Login to Reply", new_user_session_url %>
    <% end %>
  </div>

  <form class='reply-post-form' data-id="post_id <%= @post.id %>" >
    <label for="reply_content">Message</label><br>
    <textarea cols='60' class="reply-content" name='content' rows="20"></textarea><br>
    <input type="button" class="submit-button" value="Submit" />
  </form>

</div>