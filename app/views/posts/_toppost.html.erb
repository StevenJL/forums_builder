<div class="container-fluid" style="background-color: #088A85;">
  <div class="row-fluid" style="background-color: #1C1C1C;">
  <div class="row-fluid" style="background-color: #1C1C1C;">
    <div class="span2" style="background-color: #DF0174; height:100px">
      <!--Sidebar content-->
    </div>
    <div class="span10" style="background-color: #81F79F; height:100px">
      <!--Body content-->
    </div>
  </div>
</div>


<div id='post-container clear-fix' class='container-fluid'>
  <div id="post-title">
    <%= @post.title %>
  </div>
  <div id="post-profile">
    <%= link_to @post.user.username, user_url(@post.user)%>
  </div>
  <div id='post-content'>
    <%= @post.content %>
  </div>

  <div class='reply-button-div'>
    <% if user_signed_in? %>
    <button class="btn btn-mini reply-button">Reply</button>
    <% else %>
    <%= link_to "Login to Reply", new_user_session_url %>
    <% end %>
  </div>

  <form action="/post/reply/new" method="post">
    <textarea class="reply-content" name='reply[content]'></textarea><br>
    <input type="hidden" name="reply[post_id]" value= <%= @post.id %> >
    <input type="hidden" name="reply[reply_id]" value= nil >
    <input class="btn btn-success submit-button" type="submit"/>
  </form>

</div>