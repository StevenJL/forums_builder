<p> <%= link_to MetaForum.first.name, root_url %> >
     <%= link_to @parent.name, super_forum_url(@parent) %> >
     <%= link_to @sub_forum.name, sub_forum_url(@sub_forum) %>  <p>

<h4> <%= @post.title %> </h4>
<%= @post.user.username %>
<p> <%= @post.content %> </p><br>
<button id="reply-button">Reply to Post</button>
<div id="reply-form"></div>

<%= form_for(@reply, :url => post_new_reply_url) do |f| %>
  <%= f.label :content , "Message" %><br>
  <%= f.text_area(:content, :cols=>60, :row=>20) %>
  <input type="hidden" name="post_id" value= <%= @post.id %> /><br>
  <%= f.submit %>
<% end %>

<hr>
<% @replies.each do |reply| %>
<%= reply.content %> <br>
<%= reply.user.username %>
<% end %>

<script>
$(document).ready(function() {
  $('#reply-button').on('click', function() {
  });
});
</script>