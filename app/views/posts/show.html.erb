<p> <%= link_to MetaForum.first.name, root_url %> >
     <%= link_to @parent.name, super_forum_url(@parent) %> >
     <%= link_to @sub_forum.name, sub_forum_url(@sub_forum) %>  <p>

<% if user_signed_in? %>
  <div id='reply-sign-in'></div>
<% else %>
  <div id='reply-signed-in'></div>
<% end %>

<h4> <%= @post.title %> </h4>
<%= @post.user.username %>
<p> <%= @post.content %> </p>
<hr>
<% @replies.each do |reply| %>
<%= reply.content %> <br>
<%= reply.user.username %>
<% end %>

