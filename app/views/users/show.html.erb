<div class="container-fluid main-container">
  <div class="row">
    <div class="span5">
      UserName: <%= @user.username %><br>
      Email: <%= @user.email %><br>
      Real Name: <%= @user_profile.name %><br>
      Location: <%= @user_profile.name %><br>
      Birth Date: <%= @user_profile.birth_date %><br>
      About Me: <%= @user_profile.about_me %><br>
      Signature: <%= @user_profile.signature %>
    </div>

    <div class="span5">
      <br>
      <hr>
      All Posts by this User:
      <ul>
        <% @posts.each do |post| %>
          <li>
            <%= post.title %><br>
            <%= post.content %>
          </li>
        <% end %>
      </ul>

      All Replies by this User:
      <ul>
        <% @replies.each do |reply| %>
          <li>
            Post: <%= reply.post.title %><br>
            Reply: <%= reply.content %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>  
</div>

