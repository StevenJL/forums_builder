<!DOCTYPE html>
<html>
<head>
  <title>ForumBuilder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <div id="user_nav">
    <%= link_to "Forum Home", root_url %>
    <% if user_signed_in?%>
      Signed in as <%= current_user.email %>
      <%= link_to "Logout", destroy_user_session_url, :method => :delete %>
    <% else %>
      <%= link_to "Register", new_user_registration_url %> or <%= link_to "Login", new_user_session_url %> 
    <% end %>
  </div>
</div>

<%= yield %>

</body>
</html>
