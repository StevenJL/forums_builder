<!DOCTYPE html>
<html>
<head>
  <title>ForumBuilder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

 <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Forum Home", root_url %></li>
            <li class="signed-in-as-email"><% if user_signed_in? %> Signed in as: <%= current_user.email %><% end %></li>
            <li><% if user_signed_in? %> <%= link_to "Your Profile", user_profile_url(current_user) %> <% end %></li>
            <li><% if user_signed_in? %>
                  <% if current_user.admin? %>
                    <%= link_to "Admin Tools", admintools_url %>
                  <% end %>
                <% end %> 
            <li><% if user_signed_in? %> <%= link_to "Logout", destroy_user_session_url, :method => :delete %> <% end %></li>                    
            <li><% if not user_signed_in? %> <%= link_to "Register", new_user_registration_url %> <% end %> </li>
            <li><% if not user_signed_in? %> <%= link_to "Login", new_user_session_url %> <% end %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
